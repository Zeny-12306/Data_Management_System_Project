<Window x:Class="Data_Management_System.EditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Data_Management_System"
        mc:Ignorable="d"
        Title="EditDialog" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="ID:"/>
            <TextBox x:Name="txtId" IsEnabled="True"/>
            <TextBlock Text="姓名:"/>
            <TextBox x:Name="txtName"/>

            <TextBlock Text="Sex:"/>
            <ComboBox x:Name="cmbSex">
                <ComboBoxItem Content="男"/>
                <ComboBoxItem Content="女"/>
            </ComboBox>

            <TextBlock Text="年龄:"/>
            <TextBox x:Name="txtAge" Width="40"/>

            <Button Content="保存" Click="SaveButton_Click"/>
            <Button Content="取消" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
